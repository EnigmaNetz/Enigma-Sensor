{
  "logging": {
    "level": "info",
    "file": "logs/enigma-sensor.log",
    "max_size_mb": 100,
    "log_retention_days": 1
  },
  "capture": {
    "output_dir": "./captures",
    "window_seconds": 60,
    "loop": true,
    "interface": "any"
  },
  "enigma_api": {
    "server": "api.enigmaai.net:443",
    "api_key": "REPLACE_WITH_YOUR_API_KEY",
    "upload": true
  },
  "buffering": {
    "dir": "logs/buffer",
    "max_age_hours": 2
  },
  "zeek": {
    "sampling_percentage": 100
  }
}
