{
  "logging": {
    "level": "info",
    "file": "logs/enigma-sensor.log",
    "max_size_mb": 50,
    "log_retention_days": 1
  },
  "capture": {
    "output_dir": "./captures",
    "window_seconds": 60,
    "loop": false,
    "interface": "any"
  },
  "enigma_api": {
    "server": "api.enigmaai.net:443",
    "api_key": "REPLACE_WITH_YOUR_API_KEY",
    "upload": false
  },
  "zeek": {
    "path": "/opt/zeek/bin/zeek",
    "sampling_percentage": 100
  },
  "load_test": {
    "enabled": true,
    "retain_pcap_files": true
  }
}